<%= render "header" %>

<div class="container w-full mx-auto pt-20">
  <div class="w-full px-4 md:px-0 md:mt-8 mb-16 text-gray-800 leading-normal">
    <!-- Filters Starting -->
    <%= render "videos/filters" %>
    <!-- Filters Ended -->
    <div data-controller="videos" id="videos">
      <div class="w-full px-3 my-6 md:mb-0">
        <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="grid-state">
          Choix de la vidéo
        </label>
        <div class="relative">
          <select class="block appearance-none w-full bg-white border text-gray-600 py-3 px-4 pr-8 rounded leading-tight focus:outline-none" id="grid-state" data-target="videos.list" data-action="videos#displayVideo">
            <option value="">Générez la liste en utilisant les filtres </option>
          </select>
          <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700">
            <svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"/></svg>
          </div>
        </div>
      </div>
      <!-- Graphs starting -->
      <div class="embed-responsive aspect-ratio-16/9">
        <iframe class="embed-responsive-item p-3" data-target="videos.frame" src=""></iframe>
      </div>
    </div>
  </div>
</div>
